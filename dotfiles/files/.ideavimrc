" .ideavimrc is a configuration file for IdeaVim plugin. It uses
"   the same commands as the original .vimrc configuration.
" You can find a list of commands here: https://jb.gg/h38q75
" Find more examples here: https://jb.gg/share-ideavimrc

let mapleader = " "

" Set values
set scrolloff=5
set incsearch
set ignorecase
set multiple-cursors
set surround
set easymotion
set cb^=unnamed

" Don't use Ex mode, use Q for formatting.
map Q gq

" --- Enable IdeaVim plugins https://jb.gg/ideavim-plugins
Plug 'machakann/vim-highlightedyank'
Plug 'tpope/vim-commentary'
Plug 'justinmk/vim-sneak'

" Unmap conflicts
unmap gt
unmap gr

"" -- Map IDE actions to IdeaVim -- https://jb.gg/abva4t
vnoremap <C-r> \"hy:%s/<C-r>h//gc<left><left><left>
nmap <leader>. <Action>(ShowIntentionActions)
map <leader>p <Action>(GotoAction)
map <leader>d <Action>(Debug)
map <leader>D <Action>(Stop)
map <leader>b <Action>(ToggleLineBreakpoint)
map <leader>f <Action>(GotoFile)
map <leader>e <Action>(ActivateProjectToolWindow)
map <leader>r <Action>(RecentFiles)
nmap <leader>cn <Action>(RenameElement)
nmap <leader>cf <Action>(ReformatCode)
nmap <leader>x <Action>(ActivateTerminalToolWindow)
map <leader>sG <Action>(FindSelectionInPath)
map <leader>sf <Action>(GoToFile)

nmap gd <Action>(GotoDeclaration)
nmap gt <Action>(GotoTypeDeclaration)
nmap gr <Action>(ShowUsages)
nmap gR <Action>(GotoImplementation)
nmap gc <Action>(GotoClass)
nmap gs <Action>(GotoSymbol)
nmap gee <Action>(ShowErrorDescription)
nmap gen <Action>(GotoNextError)
nmap gep <Action>(GotoPreviousError)
nmap gh <Action>(ShowHoverInfo)
nmap ' <Action>(ShowHoverInfo)
